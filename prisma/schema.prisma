datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String     @id
  email     String     @unique
  name      String?
  password  String?
  flashcards Flashcard[]
}

model Flashcard {
  id        String   @id @default(uuid())
  question  String
  answer    String
  order     Int
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}